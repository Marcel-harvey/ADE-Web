@model List<ADE_Web.Models.AppsBuiltModel>

@{
    ViewData["Title"] = "Apps Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Apps Dashboard</h2>
        <a asp-action="CreateAppsBuilt" class="btn btn-primary">+ Add New App</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No apps have been created yet.</div>
    }
    else
    {
        @foreach (var app in Model)
        {
            <table id="dashboard-table-index">
                <tbody id="dashboard-table-tbody-index">
                    <tr>
                        <th>
                            App Name
                        </th>

                        <td>
                            @app.AppName
                        </td>
                    </tr>

                    <tr>
                        <th>
                            App Description
                        </th>

                        <td style="white-space: pre-wrap;">
                            @app.AppDescription
                        </td>
                    </tr>

                    <tr>
                        <th>
                            GitHub URL
                        </th>

                        <td>
                            @if (!string.IsNullOrWhiteSpace(app.AppGitHubUrl))
                            {
                                <a href="@app.AppGitHubUrl" target="_blank" class="text-decoration-none">
                                    @app.AppGitHubUrl
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Improvements
                        </th>

                        <td>
                            @if (app.appImprovements != null && app.appImprovements.Any())
                            {
                                <ul class="mb-0">
                                    @foreach (var imp in app.appImprovements)
                                    {
                                        <li>@imp.Improvement</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span class="text-muted">No improvements added</span>
                            }
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Actions
                        </th>

                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@app.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this app?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        }        
    }
</div>
