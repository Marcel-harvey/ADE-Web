@model List<ADE_Web.Models.TechStackModel>

@{
    ViewData["Title"] = "Apps Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Tech Stack Dashboard</h2>
        <a asp-action="CreateTechStack" class="btn btn-primary">+ Add New Tech Stack</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No Tech Stacks have been created yet.</div>
    }
    else
    {
        @foreach (var tech in Model)
        {
            <table id="dashboard-table-index">
                <tbody id="dashboard-table-tbody-index">
                    <tr>
                        <th>Language</th>
                        <td>@tech.Language</td>
                    </tr>

                    <tr>
                        <th>Proficiency</th>
                        <td>@tech.Proficiency</td>
                    </tr>

                    <tr>
                        <th>Actions</th>
                        <td>
                            <div class="btn-group">
                                <a href="javascript:void(0);"
                                   class="btn btn-sm btn-outline-secondary edit-tech-btn"
                                   data-id="@tech.Id"
                                   data-language="@tech.Language"
                                   data-proficiency="@tech.Proficiency">
                                    Edit
                                </a>

                                <a href="javascript:void(0);"
                                   class="btn btn-sm btn-outline-danger delete-tech-btn"
                                   data-id="@tech.Id"
                                   data-language="@tech.Language"
                                   data-proficiency="@tech.Proficiency">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>

<!-- Edit Tech Stack Modal -->
<div class="modal fade" id="editTechModal" tabindex="-1" aria-labelledby="editTechModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:50vw;">
        <div class="modal-content">
            <form id="editTechForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTechModalLabel">Edit Tech Stack</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="TechStackId" name="TechStackId" />

                    <div class="mb-3">
                        <label for="Language" class="form-label">Language / Framework</label>
                        <input type="text" class="form-control" id="Language" name="Language" required />
                    </div>

                    <div class="mb-3">
                        <label for="Proficiency" class="form-label">Proficiency (1–10)</label>
                        <input type="number" class="form-control" id="Proficiency" name="Proficiency" min="1" max="10" required />
                    </div>

                    <div id="editTechMessage" class="text-danger"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Tech Modal -->
<div class="modal fade" id="deleteTechModal" tabindex="-1" aria-labelledby="deleteTechModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width:50vw;">
        <div class="modal-content">
            <form id="deleteTechForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteTechModalLabel">Delete Tech Stack</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="DeleteTechStackId" name="TechStackId" />

                    <div class="mb-3">
                        <label for="Language" class="form-label">Language</label>
                        <input type="text" class="form-control" id="DeleteLanguage" name="Language" readonly />
                    </div>

                    <div class="mb-3">
                        <label for="Proficiency" class="form-label">Proficiency</label>
                        <input type="text" class="form-control" id="DeleteProficiency" name="Proficiency" readonly />
                    </div>

                    <div id="deleteTechMessage" class="text-danger"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function ()
        {
            // Open Edit Modal
            $('.edit-tech-btn').click(function ()
            {
                var id = $(this).data('id');
                var language = $(this).data('language');
                var proficiency = $(this).data('proficiency');

                $('#TechStackId').val(id);
                $('#Language').val(language);
                $('#Proficiency').val(proficiency);

                $('#editTechMessage').text('');
                new bootstrap.Modal(document.getElementById('editTechModal')).show();
            });

            // Submit Edit Form
            $('#editTechForm').submit(function (e)
            {
                e.preventDefault();

                var formData = {
                    TechStackId: $('#TechStackId').val(),
                    Language: $('#Language').val(),
                    Proficiency: $('#Proficiency').val()
                };

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("UpdateTechStack", "Dashboard")',
                    data: formData,
                    success: function ()
                    {
                        location.reload();
                    },
                    error: function (xhr)
                    {
                        $('#editTechMessage').text(xhr.responseText || 'An error occurred.');
                    }
                });
            });

            // Open Delete Modal
            $('.delete-tech-btn').click(function ()
            {
                var id = $(this).data('id');
                var language = $(this).data('language');
                var proficiency = $(this).data('proficiency');

                $('#DeleteTechStackId').val(id);
                $('#DeleteLanguage').val(language);
                $('#DeleteProficiency').val(proficiency);

                $('#deleteTechMessage').text('');
                new bootstrap.Modal(document.getElementById('deleteTechModal')).show();
            });

            // Submit Delete Form
            $('#deleteTechForm').submit(function (e)
            {
                e.preventDefault();

                var id = $('#DeleteTechStackId').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteTechStack", "Dashboard")',
                    data: { id: id },
                    success: function ()
                    {
                        location.reload();
                    },
                    error: function (xhr)
                    {
                        $('#deleteTechMessage').text(xhr.responseText || 'An error occurred.');
                    }
                });
            });
        });
    </script>
}
