@model List<ADE_Web.Models.BlogModel>

@{
    ViewData["Title"] = "Blog Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Blog Dashboard</h2>
        <a asp-action="CreateBlog" class="btn btn-primary">+ Add New Blog</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">No apps have been created yet.</div>
    }
    else
    {
        @foreach (var blog in Model)
        {
            <table id="dashboard-table-index">
                <tbody id="dashboard-table-tbody-index">
                    <tr>
                        <th>
                            Blog Title
                        </th>

                        <td>
                            @blog.BlogTitle
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Blog Content
                        </th>

                        <td style="white-space: pre-wrap;">
                            @blog.BlogContent
                        </td>
                    </tr>

                    <tr>
                        <th>
                            Actions
                        </th>

                        <td>
                            <div class="btn-group">
                                <a  href="javascript:void(0);"
                                    class="btn btn-sm btn-outline-secondary edit-blog-btn"
                                    data-id="@blog.Id"
                                    data-title="@blog.BlogTitle"
                                    data-content="@blog.BlogContent">
                                        Edit
                                </a>

                                <a  href="javascript:void(0);"
                                    class="btn btn-sm btn-outline-danger delete-blog-btn"
                                    data-id="@blog.Id"
                                    data-title="@blog.BlogTitle"
                                    data-content="@blog.BlogContent">
                                        Delete
                               </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    }
</div>


<!-- Edit Blog Modal -->
<div class="modal fade" id="editBlogModal" tabindex="-1" aria-labelledby="editBlogModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="editBlogForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="editBlogModalLabel">Edit Blog</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="BlogId" name="BlogId" />

                    <div class="mb-3">
                        <label for="BlogTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="BlogTitle" name="BlogTitle" required />
                    </div>

                    <div class="mb-3">
                        <label for="BlogContent" class="form-label">Content</label>
                        <textarea class="form-control" id="BlogContent" name="BlogContent" rows="5" ></textarea>
                    </div>

                    <div id="editBlogMessage" class="text-danger"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Blog Modal -->
<div class="modal fade" id="deleteBlogModal" tabindex="-1" aria-labelledby="deleteBlogModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteBlogForm">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteBlogModalLabel">Delete Blog</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="BlogId" name="BlogId" />

                    <div class="mb-3">
                        <label for="BlogTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="BlogTitle" name="BlogTitle" required readonly/>
                    </div>

                    <div class="mb-3">
                        <label for="BlogContent" class="form-label">Content</label>
                        <textarea class="form-control" id="BlogContent" name="BlogContent" rows="5" readonly></textarea>
                    </div>

                    <div id="deleteBlogMessage" class="text-danger"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete Blog</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function ()
        {
            // Open modal and fill form with existing blog data
            $('.edit-blog-btn').click(function ()
            {
                var id = $(this).data('id');
                var title = $(this).data('title');
                var content = $(this).data('content');

                $('#BlogId').val(id);
                $('#BlogTitle').val(title);
                $('#BlogContent').val(content);

                $('#editBlogMessage').text('');
                var editModal = new bootstrap.Modal(document.getElementById('editBlogModal'));
                editModal.show();
            });

            // Submit the form via AJAX
            $('#editBlogForm').submit(function (e)
            {
                e.preventDefault();

                var formData = {
                    BlogId: $('#BlogId').val(),
                    BlogTitle: $('#BlogTitle').val(),
                    BlogContent: $('#BlogContent').val()
                };

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("UpdateBlog", "Dashboard")',
                    data: formData,
                    success: function ()
                    {
                        location.reload(); // reload page to reflect changes
                    },
                    error: function (xhr)
                    {
                        $('#editBlogMessage').text(xhr.responseText || 'An error occurred.');
                    }
                });
            });
        });

        $(document).ready(function ()
        {
            // Open modal and fill form with existing blog data
            $('.delete-blog-btn').click(function ()
            {
                var id = $(this).data('id');
                var title = $(this).data('title');
                var content = $(this).data('content');

                $('#deleteBlogForm #BlogId').val(id);
                $('#deleteBlogForm #BlogTitle').val(title);
                $('#deleteBlogForm #BlogContent').val(content);

                $('#deleteBlogMessage').text('');
                var deleteModal = new bootstrap.Modal(document.getElementById('deleteBlogModal'));
                deleteModal.show();
            });

            // Delete blog via AJAX
            $('#deleteBlogForm').submit(function (e)
            {
                e.preventDefault();

                var blogId = $('#deleteBlogForm #BlogId').val();

                $.ajax({
                    type: "POST",
                    url: '@Url.Action("DeleteBlog", "Dashboard")',
                    data: { id: blogId },
                    success: function ()
                    {
                        location.reload(); // reload page to remove deleted blog
                    },
                    error: function (xhr)
                    {
                        $('#deleteBlogMessage').text(xhr.responseText || 'An error occurred.');
                    }
                });
            });
        });
    </script>
}
